Page{
  background-color: #f8f8f8;
  padding-top: 20rpx;
  box-sizing: border-box;
}
.main{
  box-sizing: border-box;
  background-color: #ffffff;
  padding: 29rpx 40rpx;
}
.main .main-top{
  display: flex;
}
.main .main-top .top-left{
  flex: 1;
}
.main .main-top .top-left .info{
  color: #606060;
  font-size: 26rpx;
  height: 46rpx;
  line-height: 46rpx;
}
.main .main-top .top-left .info.name{
  font-size: 30rpx;
  color: #505050;
  height: 64rpx;
  line-height: 64rpx;
}
.main .main-top .top-right{
  width: 160rpx;
  height: 160rpx;
}
.main .main-top .top-right image{
  background-color: #53adff;
  width: 160rpx;
  height: 160rpx;
  border-radius: 20rpx;
}
.main .main-down {
  margin-top: 60rpx;
  box-sizing: border-box;
  display: flex;
}
.main .main-down .down-left .contact-info{
  font-size: 26rpx;
  color: #606060;
  height: 48rpx;
  line-height: 48rpx;
}
.main .main-down .down-left{
  flex: 1;
}
.main .main-down .down-right {
  width: 54rpx;
  height: 54rpx;
  align-self: flex-end;
}
.main .main-down .down-right image{
  width: 36rpx;
  height: 36rpx;
}
.footer {
  position: absolute;
  bottom: 30rpx;
  width: 100%;
}
.footer .footer-btn {
  font-size: 34rpx;
  width: 670rpx;
  border-radius: 10rpx;
  height: 80rpx;
  line-height: 80rpx;
}
.footer .footer-btn.btn-1{
  background-color: #2C7FE7;
  color: #ffffff;
  margin-bottom: 20rpx;
}
.footer .footer-btn.btn-2{
  background-color: #ffffff;
  color: #505050;
  border: 1rpx solid #ccc9c9;
}
