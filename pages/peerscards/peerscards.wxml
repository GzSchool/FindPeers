<view class="footer">
  <form bindsubmit="save" report-submit='true'>
    <button class="footer-btn" plain='false' wx:if="{{!checkSave&&!notadd}}" form-type="submit">保存到名片夹</button>
  </form> 
  <button class="{{isgroup?'footer-btn':'footer-find'}}" wx:if='{{checkSave||!isgroup}}' plain='false' bindtap='back'>进入我的同行信息</button>
  <button class="footer-btn" plain='false' wx:if='{{notadd}}' open-type='getUserInfo' bindgetuserinfo='addcards'>添加个人信息</button>
  <button class="footer-find" plain='false'  wx:if='{{isgroup}}' bindtap='toTeamPeers'>查看本群名片</button>

</view>

<view class='card-set' wx:if='{{!notadd && !chooseSize}}' bindtap='chooseSize'>
  <view class='card-set-icon'><image src='../images/card/card_set.png'></image></view>
  <view class='set-text'>设置</view>
</view>
<view class='maskLayer' wx:if="{{chooseSize}}" bindtap='hideModal'></view>
    <view class='choose' wx:if="{{chooseSize}}" animation='{{animationData}}'>
      <button class="choose-in" open-type='share' bindtap='trans'>转发</button>
      <button class="choose-in" bindtap='saveToPhone'>保存到通讯录</button>
      <button class="choose-in" bindtap='backToFind'>取消</button>
    </view>


