/* pages/mine/mine.wxss */
page {
  background-color: #f8f8f8;
  padding-top: 10rpx;
  box-sizing: border-box;
}

.card {
  padding-top: 20rpx;
  background-color: #ffffff;
  text-align: center;
  box-shadow: 0rpx 2rpx 10rpx #eeeeee;
}
.card .card-info.card-name{
  height: 70rpx;
  line-height: 70rpx;
  font-size: 30rpx;
}
.card .card-info{
  /* height: 46rpx; */
  line-height: 46rpx;
  color: #505050;
  font-size: 26rpx;
  padding: 0 40rpx;
}
.card .card-img{
  margin-top: 30rpx;
  width: 180rpx;
  height: 180rpx;
  border-radius: 50%;
}
.card .card-help{
  height: 94rpx;
  line-height: 94rpx;
  color: #cccccc;
  font-size: 26rpx;
}

.find {
  box-sizing: border-box;
  width: 100%;
  height: 80rpx;
  padding: 0 27rpx 0 39rpx;
  background-color: #fff;
  margin-top: 20rpx;
  display: flex;
  align-items: center;
  box-shadow: 0rpx 2rpx 10rpx #eeeeee; 
}
.find .about{
  flex: 1;
  padding-left: 20rpx;
  font-size: 28rpx;
}
.find .img1{
  width: 33rpx;
  height: 33rpx;
}
.find .img2{
  width: 16rpx;
  height: 25rpx;
}

.share {
  width: 670rpx;
  background-color: #2c7fe7;
  color: #ffffff;
  height: 80rpx;
  line-height: 80rpx;
  font-size: 34rpx;
  position: absolute;
  bottom: 40rpx;
  left: 40rpx;
}