/* pages/mycards/mycards.wxss */

Page {
  background-color: #f8f8f8;
  padding-top: 20rpx;
  box-sizing: border-box;
  padding-bottom: 240rpx;  
}

.main {
  box-sizing: border-box;
  background-color: #fff;
  padding: 29rpx 40rpx;
  box-shadow: 0rpx 2rpx 10rpx #eee;
}

.main .main-top {
  display: flex;
}

.main .main-top .top-left {
  flex: 1;
}

.main .main-top .top-left .info {
  color: #606060;
  font-size: 26rpx;
  /* height: 46rpx; */
  line-height: 46rpx;
}

.main .main-top .top-left .info.shade {
  background-color: #e6e6e6;
  color: #fe0000;
  width: 340rpx;
  text-align: center;
  font-size: 20rpx;
  height: 28rpx;
  line-height: 28rpx;
  margin: 10rpx 0;
}

.main .main-top .top-left .info.name {
  font-size: 30rpx;
  color: #505050;
  height: 64rpx;
  line-height: 64rpx;
}

.main .main-top .top-right {
  width: 160rpx;
  height: 160rpx;
}

.main .main-top .top-right image {
  background-color: #f8f8f8;
  width: 160rpx;
  height: 160rpx;
  border-radius: 20rpx;
}

.main .main-down {
  margin-top: 60rpx;
  box-sizing: border-box;
  display: flex;
}

.main .main-down .down-left .contact-info {
  font-size: 26rpx;
  color: #606060;
  /* height: 48rpx; */
  line-height: 48rpx;
  display: flex;
  align-items: center;
  word-wrap: break-word;
}

.main .main-down .down-left .contact-info .info-left {
  min-width: 34rpx;
  text-align: left;
  align-self: flex-start;
}

/* .main .main-down .down-left .contact-info .info-right{
  flex: 1;
  word-wrap:break-word;
} */

.main .main-down .down-left .contact-info .info-right.shades {
  /* background-color: #E6E6E6; */
  color: #fe0000;
  font-size: 20rpx;
  height: 28rpx;
  line-height: 28rpx;
  width: 306rpx;
  /* text-align: center; */
}

.main .main-down .down-left {
  flex: 1;
  overflow: hidden;
}

.main .main-down .down-right {
  width: 54rpx;
  height: 54rpx;
  align-self: flex-end;
}

.main .main-down .down-right image {
  width: 36rpx;
  height: 36rpx;
}

.footer {
  /* margin-top: 30rpx; */
  position: fixed;
  bottom: 30rpx;
  width: 100%;
}

.footer .footer-btn {
  font-size: 34rpx;
  width: 670rpx;
  border-radius: 10rpx;
  height: 80rpx;
  line-height: 80rpx;
  background-color: #2c7fe7;
  color: #fff;
  margin: 0 auto 20rpx;
  text-align: center;
}

.footer .write {
  background-color: #fff;
  color: #2c7fe7;
  border: 1px solid #2c7fe7;
  font-size: 34rpx;
  width: 669rpx;
  border-radius: 10rpx;
  height: 80rpx;
  line-height: 80rpx;
  margin: 0 auto 20rpx;
  text-align: center;
}

.maskLayer {
  background-color: transparent;
  opacity: 0;
  position: fixed;
  width: 100%;
  top: 0;
  bottom: 0;
  left: 0;
  right: 0;
  z-index: 99;
}

.choose {
  /* height: 360rpx; */
  position: fixed;
  bottom: 0;
  left: 0;
  z-index: 999;
  background-color: #fff;
  width: 100%;
}

.choose .choose-in {
  background-color: #fff;
  height: 90rpx;
  line-height: 90rpx;
  border-bottom: 1rpx solid #d8d8d8;
  border-radius: 0rpx;
  width: 100%;
  color: #505050;
  font-size: 28rpx;
}
