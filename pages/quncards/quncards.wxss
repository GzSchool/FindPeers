}

.main .mes-ul {
  padding-left: 40rpx;
  border-bottom: 1px solid #d9d8d9;
}

.main .mes-ul .mes-li {
  border-bottom: 1px solid #d9d8d9;
  display: flex;
  align-items: center;
}

.main .mes-ul .mes-li:last-child {
  border-bottom: none;
}

.main .mes-ul .mes-li .li-left {
  width: 120rpx;
  height: 120rpx;
  margin: 30rpx 38rpx 30rpx 0;
  background-color: #e6e6e6;
  border-radius: 10rpx;
  position: relative;
}

.main .mes-ul .mes-li .li-left .red-dot {
  width: 20rpx;
  height: 20rpx;
  background-color: #e94f42;
  border-radius: 50%;
  position: absolute;
  right: -4rpx;
  top: -4rpx;
}

.main .mes-ul .mes-li .li-left image {
  width: 120rpx;
  height: 120rpx;
  /* border-radius: 20rpx; */
}

.main .mes-ul .mes-li .li-left.join {
  display: flex;
  flex-direction: row;
  flex-wrap: wrap-reverse;
  justify-content: center;
  align-content: center;
  align-items: center;
}

.main .mes-ul .mes-li .li-left.join .join-1 {
  width: 60rpx;
  height: 60rpx;
}

.main .mes-ul .mes-li .li-left.join .join-4 {
  width: 50rpx;
  height: 50rpx;
  margin: 5rpx;
}

/* .main .mes-ul .mes-li .li-left.join .join-4 image{
  width: 50rpx;
  height: 50rpx;
} */

.main .mes-ul .mes-li .li-left.join .join-9 {
  width: 34rpx;
  height: 34rpx;
  margin: 2rpx 2rpx;
}

/* .main .mes-ul .mes-li .li-left.join .join-9 image{
  width: 100%;
  height: 100%;
