} */

.main .mes-ul .mes-li .li-right {
  flex: 1;
  padding-right: 40rpx;
}

.main .mes-ul .mes-li .li-right .title {
  display: flex;
  justify-content: space-between;
  margin-bottom: 25rpx;
}

.main .mes-ul .mes-li .li-right .title .title-name {
  font-size: 28rpx;
  color: #505050;
}

.main .mes-ul .mes-li .li-right .title .title-time {
  font-size: 20rpx;
  color: #a8a8a8;
}

.main .mes-ul .mes-li .li-right .count {
  font-size: 24rpx;
  color: #a8a8a8;
}

.searching {
  margin-top: 120rpx;
  height: 70rpx;
  text-align: center;
  font-size: 24rpx;
  color: #949494;
  display: flex;
  align-items: center;
  justify-content: center;
  width: 100%;
}
