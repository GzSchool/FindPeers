page {
  background-color: #f8f8f8;
  padding-top: 20rpx;
}

.main {
  background-color: #fff;
}

.qunEmpty-box {
  margin-top: 200rpx;
  text-align: center;
  width: 167rpx;
  margin-left: 290rpx;
  height: 117rpx;
}

.qunEmpty-box image {
  width: 167rpx;
  height: 117rpx;
}

.qunEmpty-text {
  font-size: 28rpx;
  font-family: MicrosoftYaHei;
  color: rgba(168, 168, 168, 1);
  line-height: 108rpx;
  text-align: center;
}
.tab {
  height: 70rpx;
  line-height: 70rpx;
  border-bottom: 1rpx solid #d9d8d9;
  color: #323232;
  font-size: 30rpx;
  display: flex;
  align-items: center;
  padding-left: 40rpx;
}

.tab .tips {
  width: 2px;
  height: 24rpx;
  background-color: #007aff;
  margin-right: 15rpx;
}
.main .tab {
  height: 70rpx;
