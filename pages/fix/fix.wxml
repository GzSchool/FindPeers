    <text class="name1">{{name}}</text>
    <text class="idustry1">{{idustry}}</text>
    <text class="adress1">{{city}}</text>
    <text class="company1">{{company}}</text>
    <image class="image1" src="{{image}}">{{image}}</image>
    <image class="image4" src="/pages/images/phone.png"></image>
    <text class="phone1 ">{{phone}}</text>
    <image class="image2" src="/pages/images/wechat.png"></image>
    <text class="wechatnum1">{{wechatnum}}</text>
    <image class="image3" src="/pages/images/email.png"></image>
