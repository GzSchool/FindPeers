<!--pages/addCards/addcards.wxml-->
<form bindsubmit="submitInfo" report-submit='true'>
<view class='main'>
  <view class='main-ul'>
    <view class='main-li'>
      <view class='star'></view>
      <view class='title'> <text>姓</text><text>名:</text></view>
      <input maxlength='8' placeholder-class="phcolor" placeholder='姓名' bindinput='addname' type='text' value='{{name}}' name="name"></input>
    </view>
    <view class='main-li'>
      <view class='star'>*</view>
      <view class='title'><text>微</text><text>信</text><text>号:</text></view>
      <input maxlength='20' placeholder-class="phcolor" placeholder='必填' bindinput='addnumber' type='text' value='{{wechatnum}}' name="number"></input>
    </view>
    <view class='main-li'>
      <view class='star'>*</view>
      <view class='title'><text>公</text><text>司:</text></view>
      <input maxlength='40' placeholder-class="phcolor" placeholder='必填' bindinput='addcompany' type='text' value='{{company}}' name="company"></input>
    </view>
    <view class='main-li'>
      <view class='star'>*</view>
      <view class='title'><text>行</text><text>业:</text></view>
<input placeholder-class="phcolor" disabled='disabled' bindtap='chooseIn' placeholder='必填' type='text' value='{{idustry}}'></input>
      <image src='/pages/images/right.png' bindtap='chooseIn'></image>
    </view>
    <picker mode='region' bindchange="cityChange" value='{{region}}' custom-item="{{customItem}}">
    <view class='main-li'>
      <view class='star'>*</view>
      <view class='title'><text>城</text><text>市:</text></view>
      <input disabled='disabled' maxlength='40' placeholder-class="phcolor" placeholder='必填' bindinput='addcity' type='text' value='{{city}}'></input>
    </view>
    </picker>
    <view class='main-li'>
      <view class='star'>*</view>
      <view class='title'><text>职</text><text>务:</text></view>
      <input maxlength='40' placeholder-class="phcolor" placeholder='填写公司职务' bindinput='addjob' type='text' value='{{job}}'></input>
    </view>
    <view class='main-li'>
      <view class='star'></view>
      <view class='title'><text>手</text><text>机</text><text>号:</text></view>
      <input maxlength='11' placeholder-class="phcolor" placeholder='填写可见同行手机号' bindinput='addphone' type='number' value='{{phone}}' name="phone"></input>
      <button style='padding:0;' class='wx-get' open-type="getPhoneNumber" bindgetphonenumber="getPhoneNumber">微信获取</button>
    </view>
    <view class='main-li'>
      <view class='star'></view>
      <view class='title'><text>邮</text><text>箱:</text></view>
      <input maxlength='40' placeholder-class="phcolor" placeholder='邮箱' bindinput='addemail' type='text' value='{{email}}'></input>
    </view>
    <view class='main-li' wx:if='{{isshow0}}'>
      <view class='star'></view>
      <view class='title'><text>需</text><text>求:</text></view>
      <input maxlength='40' placeholder-class="phcolor" placeholder='需求' bindinput='adddemand' type='text' value='{{demand}}' name="demand"></input>
    </view>
    <view class='main-li' wx:if='{{isshow1}}'>
      <view class='star'></view>
      <view class='title'><text>资</text><text>源:</text></view>
      <input maxlength='40' placeholder-class="phcolor" placeholder='资源' bindinput='addresource' type='text' value='{{resource}}' name="resource"></input>
    </view>
  </view>
  <view class='more' bindtap='addmore'>添加更多信息</view>
  <view class='intro'>
    <view class='intro-title'>
      <view>简介</view>
      <view class='count'>{{count}}/140</view>
    </view>
    <textarea maxlength='140' placeholder-class="phcolor" placeholder='请您填写自我介绍或公司简介' bindinput='introInput' type='text' value='{{introduction}}'></textarea>
  </view>
</view>
<!-- <view class='save-btn' bindtap='save'>保存</view> -->
<button class='save-btn' form-type="submit" wx:if='{{!saveLoading}}'>保存</button>
<button class='weui-button save-btn' wx:if='{{saveLoading}}'><view class='weui-loading'></view>保存</button>
</form>
