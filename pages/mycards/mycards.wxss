/* pages/mycards/mycards.wxss */
Page{
  width: 100%;
  background-color: #f8f8f8;
  box-sizing: border-box;
  padding-bottom: 240rpx;
}

.content {
  background-color: #ffffff;
  margin-top: 25rpx;
  font-size: 30rpx;
  color: #606060;
  line-height: 52rpx;
}
.content .con-li {
  display: flex;
}
.content .con-li .con-li-left {
  min-width: 96rpx;
  height: 100%;
  padding-left: 30rpx;
  padding-top: 22rpx;
}
.content .con-li .con-li-left .img-box{
  height: 52rpx;
  display: flex;
  align-items: center;
  text-align: center;
  justify-content: center;
}
.content .con-li .con-li-right {
  flex: 1;
  border-bottom: 1rpx solid #D8D8D8;
  padding: 22rpx 32rpx 22rpx 0;
}

.footer {
  position: fixed;
  bottom: 30rpx;
  z-index: 30;
  width: 100%;
}
.footer .footer-btn {
  font-size: 34rpx;
  width: 670rpx;
  border-radius: 10rpx;
  height: 80rpx;
  line-height: 80rpx;
  background-color: #2C7FE7;
  color: #ffffff;
  margin: 0 auto 10rpx;
  text-align: center;
}
.footer .footer-btn.white {
  background-color: #fff;
  color: #2c7fe7;
  border: 1px solid #2c7fe7;
}
.Album{
  width: 100%;
  margin-top: 20rpx;
  background-color: #ffffff;
  padding: 30rpx 4rpx 0rpx 40rpx;
  display: flex;
  flex-direction: row;
  flex-wrap: wrap;
}
.Album .Album-box{
  width: 200rpx;
  height: 200rpx;
  margin-right: 36rpx;
  margin-bottom: 30rpx;
}
.Album .Album-box image{
  width: 200rpx;
  height: 200rpx;
}