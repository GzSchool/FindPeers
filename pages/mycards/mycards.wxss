Page{
  width: 100%;
  background-color: #f8f8f8;
  box-sizing: border-box;
  padding-bottom: 240rpx;
}

.content {
  background-color: #ffffff;
  margin-top: 25rpx;
  font-size: 30rpx;
  color: #606060;
  line-height: 52rpx;
}
.content .con-li {
  display: flex;
}
.content .con-li .con-li-left {
  min-width: 96rpx;
  height: 100%;
  padding-left: 30rpx;
  padding-top: 22rpx;
}
.content .con-li .con-li-left .img-box{
  height: 52rpx;
  display: flex;
  align-items: center;
  text-align: center;
  justify-content: center;
}
.content .con-li .con-li-right {
  flex: 1;
  border-bottom: 1rpx solid #D8D8D8;
  padding: 22rpx 32rpx 22rpx 0;
}
