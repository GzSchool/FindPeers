.footer {
  position: fixed;
  bottom: 30rpx;
  z-index: 30;
  width: 100%;
}
.footer .footer-btn {
  font-size: 34rpx;
  width: 670rpx;
  border-radius: 10rpx;
  height: 80rpx;
  line-height: 80rpx;
  background-color: #2C7FE7;
  color: #ffffff;
  margin: 0 auto 10rpx;
  text-align: center;
}
.footer .footer-btn.white {
  background-color: #fff;
  color: #2c7fe7;
  border: 1px solid #2c7fe7;
}
