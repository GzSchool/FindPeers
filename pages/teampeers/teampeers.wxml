<!--pages/teampeers/teampeers.wxml-->
<view class="inputSearch">
  <view class="search1">
    <image src='/pages/images/3.png' class="image" mode="aspectFit"></image>
  </view>
  <input class="search" bindblur='bindSearch' placeholder-style='font-size:12px;' placeholder='{{key}}'></input>
</view>
<view class="qunname">{{qunname}}</view>
<view class="mycards1">
  <image class="image1" src="{{image}}">{{image}}</image>
  <view class="need">
    <view class="name1" bindtap='mycards'>{{name}}</view>
    <view class="job1">{{job}}</view>
    <view class="idustry1">{{industry}}</view>
    <view class="company1">{{company}}</view>
  </view>
  <image class="img {{cansee?'map-hide':''}}" src="/pages/images/share.png" bindtap='share'></image>
</view>
<view class="list" bindscrolltolower="bindDownLoad" bindscroll="scroll" bindscrolltoupper="refresh">
  <checkbox-group bindchange="checkboxChange">
    <label class="checkbox line">
      <checkbox class="check" />全选</label>
    <button class="saveall" bindtap='aaa'>保存</button>
    <view class="item line" wx:for="{{list}}" wx:for-index="index" wx:for-item="item" wx:key="11" bindtap='select'>
      <!--<image class="img" src="{{item.pic_url}}"></image>-->
        <image class="url" src="/pages/images/1.png"></image>
        <view class="name">{{item.username}}</view>
        <checkbox class="check1 {{item.saveFlag==1?'':'map-hide'}}" data-key='{{item.id}}' checked="{{item.checked}}" bindtap='check' />
        <view class="industry">{{item.userIndustry}}</view>
        <view class="city">{{item.userCity}}</view>
        <view class="company">{{item.userCompany}}</view>
    </view>
  </checkbox-group>
</view>
