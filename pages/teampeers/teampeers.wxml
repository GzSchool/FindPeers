<!--pages/teampeers/teampeers.wxml-->
<view class="inputSearch" bindtap='inputSearch'>
  <view class="search1">
    <image src='/pages/images/3.png' class="image" mode="aspectFit"></image>
  </view>
  <input class="search" bindblur='bindSearch' placeholder-style='font-size:12px;' placeholder='{{key}}'></input>
</view>
<view class="qunname">{{qunname}}</view>
<view class="findmore-card {{notadd?'':'map-hide'}}">
  <button class="add" open-type='getUserInfo' bindgetuserinfo='addcards'>添加我的信息</button>
  </view>
<view class="mycards1 {{notadd?'map-hide':''}}">
  <image class="image1" src="{{image}}">{{image}}</image>
</view>
  <view class="need {{notadd?'map-hide':''}}"  bindtap='mycards'>
    <view class="name1">{{name}}</view>
    <view class="job1">{{job}}</view>
    <view class="idustry1">{{industry}}</view>
    <view class="company1">{{company}}</view>
  </view>
  <image class="img {{notadd?'map-hide':''}} {{canSee?'map-hide':''}}" src="/pages/images/share.png" bindtap='chooseSize'></image>
  <view class='maskLayer' wx:if="{{chooseSize}}" bindtap='hideModal'></view>
<view class='choose' wx:if="{{chooseSize}}" animation='{{animationData}}'>
<view class="sada" >
  <view class="share line">分享到本群</view>
  <image class="close" src="/pages/images/close.png" bindtap='hideModal'></image>
  <checkbox class="checkshare"></checkbox>
  <image class="imgshare" src="/pages/images/1.png"></image>
  <view class="nameshare">朝木力格</view>
  <view class="industryshare">互联网</view>
  <view class="companyshare">北京格致文化传媒有限公司</view>
  <button class="sureshare" bindtap='hideModal'>确认</button>
</view>
</view>
<checkbox-group class="group" bindchange="checkboxChange">
    <label class="checkbox line"><text class="selectAll">全选</text></label> <button class="saveall" bindtap='aaa'>保存</button>
      <checkbox class="check {{isAdd?'map-hide':''}}" bindscrolltolower="bindDownLoad"  checked="{{isAllChecked?'checked':''}}"  data-openid='{{index}}' bindscroll="scroll" bindscrolltoupper="refresh" />
      

    <view class="item line" wx:for="{{list}}" wx:for-index="index" wx:for-item="item" wx:key="11" data-id='{{item.id}}' bindtap='goPeers' >
      <!--<image class="img" src="{{item.pic_url}}"></image>-->
        <image class="url" src="/pages/images/1.png"></image>
        <view class="name">{{item.username}}</view>
        <view class="industry">{{item.userIndustry}}</view>
        <view class="city">{{item.userCity}}</view>
        <view class="company">{{item.userCompany}}</view>
        <checkbox class="check1 {{item.saveFlag==1?'':'map-hide'}}" data-cardId="{{item.id}}"data-index='{{index}}' checked="{{isChecked?'checked':''}}"/>
        <text class="city2 {{notadd?'':'map-hide'}} hide ">需填写信息才可查看</text>
        <text class="company2 {{notadd?'':'map-hide'}} hide ">需填写信息才可查看</text>
    </view>

</checkbox-group>
