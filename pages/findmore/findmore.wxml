<!--pages/findmore/findmore.wxml-->
<view class="inputSearch" bindtap='bindtrans'>
  <view class="search1">
    <image src='/pages/images/3.png' class="image1" mode="aspectFit"></image>
  </view>
  <input class="search" bindblur='bindSearch' placeholder-style='font-size:12px;' placeholder='{{key}}'></input>
</view>
<view class="findmore">
  <view class="finmore-mycard ">
    <view class="shu"></view>
    <text class="findmore-mine">我的名片</text>
  </view>
  <view class="findmore-card {{notadd?'map-hide':''}}">
  <button class="add" bindtap='addcards'>添加我的信息</button>
  </view>
  <view class="findmore-card {{notadd?'':'map-hide'}}" bindtap='mycards'>
    <image class="image" src="/pages/images/1.png"></image>
    <view class="findmore-name">{{name}}</view>
    <view class="findmore-job">{{idustry}}</view>
    <view class="findmore-company">{{company}}</view>
  </view>
  <view class="findmore-get">
  <view class="shu1"></view>
    <view class="findmore-get1">收到的同行信息</view>
  </view>
  <view class="finmore-zhaotonghang" bindtap='trans'>
  <image class="image" src="/pages/images/findpeers.png"></image>
    <view class="findmore-name">找同行团队</view>
    <view class="findmore-industry">教育行业</view>
    <view class="findmore-job">找同行助手</view>
    <view class="findmore-company">北京格致文化传媒有限公司</view>
  </view>
    <view class="list" bindscrolltolower="bindDownLoad" bindscroll="scroll" bindscrolltoupper="refresh">
    <view class="item" wx:for="{{list}}" wx:for-index="index" wx:for-item="item" wx:key="11" data-key='{{item.openId}}' bindtap='select'>
      <!--<image class="img" src="{{item.pic_url}}"></image>-->
      <view class="find" bindtap='other{{index}}'>
      <image class="url" src="/pages/images/1.png"></image>
        <view class="name">{{item.username}}</view>
        <view class="industry">{{item.userIndustry}}</view>
        <view class="city">{{item.userCity}}</view>
        <view class="company">{{item.userCompany}}</view>
      </view>      
    </view>
  
  </view>
</view>