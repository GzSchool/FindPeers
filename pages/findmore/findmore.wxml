<!--pages/findmore/findmore.wxml-->
<view class='search' bindtap='bindtrans'>
  <view class='search-in'>
    <image src='/pages/images/3.png' mode="aspectFit"></image>
    <input placeholder='{{key}}' bindblur='bindSearch' placeholder-style='font-size:26rpx;color:#ccc;'></input>
  </view>
</view>
<view class='mine-card'>
  <view class='card-title'>
    <view class='title-tips'></view>
    <view class='title-name'>我的名片</view>
  </view>
  <view class='mine-info'>
    <button class='btn' wx:if='{{notadd}}' open-type="getUserInfo" bindgetuserinfo='addcards'>添加我的信息</button>
    <view class='mes-li' wx:if='{{!notadd}}' bindtap='mycards'>
      <view class='li-left'>
        <image src='{{image}}'></image>
      </view>
      <view class='li-right'>
        <view class='mes-name'>{{name}}<text>{{idustry}}</text></view>
        <view class='mes-info'>{{city}}</view>
        <view class='mes-info'>{{company}}</view>
      </view>
    </view>
  </view>
</view>
<view class='mine-card res-card'>
  <view class='card-title'>
    <view class='title-tips'></view>
    <view class='title-name'>收到的同行信息</view>
  </view>
</view>
<view class='mes-list'>
  <view class='letter'>A</view>
  <view class='mes-li' bindtap='trans'>
    <view class='li-left'>
      <image src=''></image>
    </view>
    <view class='li-right'>
      <view class='mes-name'>找同行团队<text>教育行业</text></view>
      <view class='mes-info'>北京市海淀区</view>
      <view class='mes-info'>北京格致文化传播有限公司</view>
    </view>
  </view>
  <view class='letter'>B</view>
  
  <view class='mes-li'>
    <view class='li-left'>
      <image src=''></image>
    </view>
    <view class='li-right'>
      <view class='mes-name'>找同行团队<text>教育行业</text></view>
      <view class='mes-info'>北京市海淀区</view>
      <view class='mes-info'>北京格致文化传播有限公司</view>
    </view>
  </view>
  <view class='letter'>Z</view>
  <view class='mes-link'>
    <image src='/pages/images/3.png'></image>
    <view class='link-item'>A</view>
    <view class='link-item'>B</view>
    <view class='link-item'>Z</view>

  </view>
</view>
